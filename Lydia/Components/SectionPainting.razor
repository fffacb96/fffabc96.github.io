@using Lydia.Data
@using Lydia.Pages
@using Markdig
@inject IDialogService DialogService

<MudButton @onclick="() => OpenDialogAsync(8)">
    <MudImage loading="lazy" Src="@Data.File" Style="max-width: 50%" Class="m-auto"></MudImage>
</MudButton>
<MudText Typo="Typo.subtitle1">
    @Data.Size
</MudText>

<MudText Typo="Typo.h2">
    @Data.Name
</MudText>

<MudText Typo="Typo.body1">
    @((MarkupString)Markdown.ToHtml(Data.Descriptions))
</MudText>

@code {

    [Parameter] public Painting Data { get; set; }

    private Task OpenDialogAsync(double imageId)
    {
        var parameters = new DialogParameters<ImageDialog>
        {
            { x => x.ImageId, imageId }
        };

        var options = new DialogOptions { FullScreen = true, CloseButton = true, CloseOnEscapeKey = true };

        return DialogService.ShowAsync<ImageDialog>("", parameters, options);
    }

}